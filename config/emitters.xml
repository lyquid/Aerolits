<emitterTypes>
  <emitter type="fire">
    <!-- Emitter properties -->

    <angleRange min="175" max="185"/> <!-- Clockwise from the top -->

    <blendMode mode="add"/>

    <emissionInterval value="0" randMin="1" randMax="1"/> <!-- In miliseconds. 0 for continuous emission -->

    <emissionRate value="2" randMin="1" randMax="1"/>

    <lifeTime value="-1"/> <!-- In miliseconds. Negative for infinite -->

    <textureRect x="256" y="64" w="128" h="128"/>

    <vortex active="false">
      <scale value="0"/>
      <speed value="0"/>
    </vortex>

    <!-- Particles properties -->

    <maxParticleLife value="20" randMin="0.8" randMax="1"/>

    <colors>
      <color r="255" g="0" b="255"  a="255"/>
      <color r="255" g="0"   b=""   a="230"/>
      <color r="0" g="25"   b="255"  a="200"/>
    </colors>

    <sizes>
      <size value="50" randMin="0.8" randMax="1"/>
      <size value="1" randMin="0.8" randMax="1"/>
    </sizes>

    <speeds>
      <speed value="10" randMin="1"  randMax="1"/>
      <speed value="1" randMin="0.1"  randMax="1"/>
    </speeds>

    <rotation value="360" randMin="0" randMax="1"/>

    <startRotationSpeed value="0"  randMin="-1" randMax="1"/>
    <endRotationSpeed   value="0"   randMin="-1" randMax="1"/>
  </emitter>

  <emitter type="plasma">
    <!-- Emitter properties -->

    <angleRange min="0" max="360"/> <!-- Clockwise from the top -->

    <blendMode mode="add"/>

    <emissionInterval value="10" randMin="1" randMax="1"/> <!-- In miliseconds. 0 for continuous emission -->

    <emissionRate value="50" randMin="1" randMax="1"/>

    <lifeTime value="1000"/> <!-- In miliseconds. Negative for infinite -->

    <textureRect x="256" y="64" w="128" h="128"/>

    <vortex active="false">
      <scale value="10000"/>
      <speed value="0.0212"/>
    </vortex>

    <!-- Particles properties -->

    <maxParticleLife value="450" randMin="1" randMax="1"/>

    <colors>
      <color r="1" g="0" b="0"   a="100"/>
      <color r="0" g="255"   b="255"   a="255"/>
      <color r="0"   g="0"   b="255" a="255"/>
    </colors>

    <sizes>
      <size value="1" randMin="1" randMax="1"/>
      <size value="100"  randMin="1" randMax="1"/>
      <size value="10" randMin="1" randMax="1"/>
    </sizes>

    <speeds>
      <speed value="0.5" randMin="1"  randMax="1"/>
      <speed value="0.001" randMin="1"  randMax="1"/>
      <speed value="150" randMin="0.8"  randMax="1"/>
    </speeds>

    <rotation value="360" randMin="0" randMax="1"/>

    <startRotationSpeed value="0"  randMin="-1" randMax="1"/>
    <endRotationSpeed   value="0"   randMin="-1" randMax="1"/>
  </emitter>

  <emitter type="projectile_exhaust">
    <!-- Emitter properties -->

    <angleRange min="175" max="185"/> <!-- Clockwise from the top -->

    <blendMode mode="add"/>

    <emissionInterval value="0" randMin="1" randMax="1"/> <!-- In miliseconds. 0 for continuous emission -->

    <emissionRate value="30" randMin="0.9" randMax="1"/>

    <lifeTime value="-1"/> <!-- In miliseconds. Negative for infinite -->

    <textureRect x="256" y="64" w="128" h="128"/>

    <vortex active="false">
      <scale value="0"/>
      <speed value="0"/>
    </vortex>

    <!-- Particles properties -->

    <maxParticleLife value="50" randMin="0.8" randMax="1"/>

    <colors>
      <color r="255" g="255" b="20"   a="255"/>
      <color r="255" g="2"   b="50"   a="150"/>
      <color r="50" g="50"   b="50"   a="100"/>
    </colors>

    <sizes>
      <size value="5" randMin="0.8" randMax="1"/>
      <size value="40" randMin="0.8" randMax="1"/>
    </sizes>

    <speeds>
      <speed value="10" randMin="0.1"  randMax="1"/>
      <speed value="5"  randMin="0.8"  randMax="1"/>
    </speeds>

    <rotation value="360" randMin="0" randMax="1"/>

    <startRotationSpeed value="0"  randMin="-1" randMax="1"/>
    <endRotationSpeed   value="0"   randMin="-1" randMax="1"/>
  </emitter>
</emitterTypes>
