<emitterTypes>
  <emitter type="fire">
    <angleRange min="80" max="110"/>

    <rotSpeed   value="0"   randMin="-1" randMax="1"/>
    <startSpeed value="200" randMin="0"  randMax="1"/>
    <endSpeed   value="200" randMin="0"  randMax="1"/>

    <startSize value="200" randMin="0" randMax="1"/>
    <endSize   value="80"  randMin="1" randMax="1"/>

    <emitNumber value="1"/>
    <emitVariance value="0" randMin="0" randMax="1"/>

    <maxParticleLife value="100" randMin="0" randMax="1"/>

    <textureRect x="0" y="0" w="128" h="128"/>
    
    <startColor r="255" g="100" b="0"   a="255"/>
    <endColor   r="210" g="210" b="210" a="255"/>

    <blendMode mode="add"/>

    <lifeTime value="-1"/>
  </emitter>

  <emitter type="smoke">
    <angleRange min="60" max="90"/>

    <rotSpeed   value="0"   randMin="-1" randMax="1"/>
    <startSpeed value="200" randMin="0"  randMax="1"/>
    <endSpeed   value="200" randMin="0"  randMax="1"/>

    <startSize value="200" randMin="0" randMax="1"/>
    <endSize   value="80"  randMin="1" randMax="1"/>

    <emitNumber value="1"/>
    <emitVariance value="0" randMin="0" randMax="1"/>

    <maxParticleLife value="100" randMin="0" randMax="1"/>

    <textureRect x="128" y="128" w="128" h="128"/>
    
    <startColor r="255" g="100" b="0"   a="255"/>
    <endColor   r="210" g="210" b="210" a="0"/>

    <blendMode mode="add"/>

    <lifeTime value="-12"/>
  </emitter>

  <emitter type="exhaust">
    <angleRange min="0" max="0"/>

    <rotSpeed   value="0"   randMin="-1" randMax="1"/>
    <startSpeed value="0" randMin="0"  randMax="1"/>
    <endSpeed   value="0" randMin="0"  randMax="1"/>

    <startSize value="10" randMin="0.1" randMax="1"/>
    <endSize   value="200"  randMin="0.6" randMax="1"/>

    <emitNumber value="1"/>
    <emitVariance value="0" randMin="0" randMax="1"/>

    <maxParticleLife value="200" randMin="0.4" randMax="1"/>

    <textureRect x="64" y="0" w="64" h="64"/>
    
    <startColor r="255" g="0" b="0"   a="255"/>
    <endColor   r="0" g="0" b="255" a="0"/>

    <blendMode mode="add"/>

    <lifeTime value="-1"/>
  </emitter>
</emitterTypes>