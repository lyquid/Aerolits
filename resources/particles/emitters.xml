<emitterTypes>
  <emitter type="fire">
    <!-- Emitter properties -->
    
    <angleRange min="0" max="360"/> <!-- Clockwise from the top -->

    <blendMode mode="add"/>

    <emissionInterval value="0" randMin="1" randMax="1"/> <!-- In miliseconds. 0 for continuous emission -->

    <emissionRate value="12" randMin="1" randMax="1"/>

    <lifeTime value="-1"/> <!-- In miliseconds. Negative for infinite -->

    <textureRect x="256" y="64" w="128" h="128"/>

    <vortex active="false">
      <scale value="1000"/>
      <speed value="0.2"/>
    </vortex>

    <!-- Particles properties -->

    <maxParticleLife value="400" randMin="1" randMax="1"/>

    <startColor r="255" g="255" b="0"   a="255"/>
    <endColor   r="255" g="0"   b="255" a="0"/>

    <startSize value="5" randMin="0.6" randMax="1"/>
    <endSize   value="50"  randMin="0.6" randMax="1"/>

    <startSpeed value="1" randMin="0"  randMax="1"/>
    <endSpeed   value="0.0001" randMin="0"  randMax="1"/>

    <rotation value="360" randMin="0" randMax="1"/>

    <startRotationSpeed value="0.1"  randMin="-1" randMax="1"/>
    <endRotationSpeed   value="1"   randMin="-1" randMax="1"/>
  </emitter>
</emitterTypes>