<emitterTypes>
  <emitter type="exhaust">
    <maxParticleLife value="800" randMin="0.4" randMax="1"/>

    <textureRect x="0" y="64" w="64" h="64"/>

    <blendMode mode="add"/>

    <startSize value="10" randMin="0.1" randMax="1"/>
    <endSize   value="90"  randMin="0.6" randMax="1"/>

    <startColor r="255" g="0" b="0"   a="255"/>
    <endColor   r="0" g="0" b="255" a="0"/>

    <rotation value="360" randMin="0" randMax="1"/>

    <startRotationSpeed value="1"  randMin="-1" randMax="1"/>
    <endRotationSpeed value="0.01"   randMin="-1" randMax="1"/>

    <startSpeed value="0" randMin="0"  randMax="1"/>
    <endSpeed   value="0" randMin="0"  randMax="1"/>

    <angleRange min="0" max="0"/>

    <emissionRate value="1" randMin="0" randMax="1"/>
    
    <emissionInterval value="0" randMin="1" randMax="1"/> <!-- In miliseconds. 0 for continuous emission -->

    <lifeTime value="-1"/>
  </emitter>

  <emitter type="fire">
    <maxParticleLife value="300" randMin="1" randMax="1"/>

    <textureRect x="256" y="64" w="128" h="128"/>

    <blendMode mode="add"/>

    <startSize value="1" randMin="0.6" randMax="1"/>
    <endSize   value="100"  randMin="0.6" randMax="1"/>

    <startColor r="255" g="255" b="0"   a="255"/>
    <endColor   r="255" g="0" b="255" a="0"/>

    <rotation value="360" randMin="0" randMax="1"/>

    <startRotationSpeed value="0.1"  randMin="-1" randMax="1"/>
    <endRotationSpeed value="1"   randMin="-1" randMax="1"/>

    <startSpeed value="0.01" randMin="1"  randMax="1"/>
    <endSpeed   value="1" randMin="1"  randMax="1"/>

    <angleRange min="0" max="360"/> <!-- Clockwise from the top -->

    <emissionRate value="10" randMin="1" randMax="1"/>

    <emissionInterval value="100" randMin="1" randMax="1"/> <!-- In miliseconds. 0 for continuous emission -->
    
    <lifeTime value="5000"/> <!-- In miliseconds. Negative for infinite -->
  </emitter>

  <emitter type="love">
    <maxParticleLife value="300" randMin="1" randMax="1"/>

    <textureRect x="0" y="0" w="64" h="64"/>

    <blendMode mode="add"/>

    <startSize value="10" randMin="0.6" randMax="1"/>
    <endSize   value="50"  randMin="0.6" randMax="1"/>

    <startColor r="0" g="0" b="255"   a="255"/>
    <endColor   r="255" g="0" b="0" a="0"/>

    <rotation value="360" randMin="0" randMax="1"/>

    <startRotationSpeed value="0.1"  randMin="-1" randMax="1"/>
    <endRotationSpeed value="1"   randMin="-1" randMax="1"/>

    <startSpeed value="0.01" randMin="1"  randMax="1"/>
    <endSpeed   value="1.5" randMin="1"  randMax="1"/>

    <angleRange min="0" max="360"/> <!-- Clockwise from the top -->

    <emissionRate value="10" randMin="1" randMax="1"/>

    <emissionInterval value="500" randMin="1" randMax="1"/> <!-- In miliseconds. 0 for continuous emission -->
    
    <lifeTime value="5000"/> <!-- In miliseconds. Negative for infinite -->
  </emitter>
</emitterTypes>