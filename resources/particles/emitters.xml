<emitterTypes>
  <emitter type="exhaust">
    <maxParticleLife value="800" randMin="0.4" randMax="1"/>

    <textureRect x="64" y="0" w="64" h="64"/>

    <blendMode mode="add"/>

    <startSize value="10" randMin="0.1" randMax="1"/>
    <endSize   value="90"  randMin="0.6" randMax="1"/>

    <startColor r="255" g="0" b="0"   a="255"/>
    <endColor   r="0" g="0" b="255" a="0"/>

    <rotation value="360" randMin="0" randMax="1"/>

    <startRotationSpeed value="1"  randMin="-1" randMax="1"/>
    <endRotationSpeed value="0.01"   randMin="-1" randMax="1"/>

    <startSpeed value="1" randMin="0"  randMax="1"/>
    <endSpeed   value="0" randMin="0"  randMax="1"/>







    <angleRange min="0" max="0"/>

    
    

    <emitNumber value="1"/>
    <emitVariance value="0" randMin="0" randMax="1"/>

    <lifeTime value="-1"/>
  </emitter>

