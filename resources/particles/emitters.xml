<emitterTypes>
  <emitter type="fire">
    <!-- Emitter properties -->
    
    <angleRange min="0" max="360"/> <!-- Clockwise from the top -->

    <blendMode mode="add"/>

    <emissionInterval value="0" randMin="1" randMax="1"/> <!-- In miliseconds. 0 for continuous emission -->

    <emissionRate value="1" randMin="1" randMax="1"/>

    <lifeTime value="-1"/> <!-- In miliseconds. Negative for infinite -->

    <textureRect x="256" y="64" w="128" h="128"/>

    <vortex active="false">
      <scale value="1000"/>
      <speed value="0.212"/>
    </vortex>

    <!-- Particles properties -->

    <maxParticleLife value="850" randMin="1" randMax="1"/>
 
    <colors>
      <color r="255" g="255" b="0"   a="0"/>
      <color r="255" g="0"   b="0"   a="255"/>
      <color r="0"   g="0"   b="255" a="0"/>
    </colors>

    <startSize value="1" randMin="1" randMax="1"/>
    <endSize   value="100"  randMin="1" randMax="1"/>

    <speeds>
      <speed value="0.9" randMin="1"  randMax="1"/>
      <speed value="0.00001" randMin="1"  randMax="1"/>
      <speed value="0.8" randMin="1"  randMax="1"/>
    </speeds>

    <rotation value="360" randMin="0" randMax="1"/>

    <startRotationSpeed value="0.1"  randMin="-1" randMax="1"/>
    <endRotationSpeed   value="1"   randMin="-1" randMax="1"/>
  </emitter>
</emitterTypes>